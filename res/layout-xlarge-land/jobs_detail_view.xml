<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:id="@+id/requisition_location">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="200dp"
            android:text="Technician"
            android:layout_marginTop="20dp"
            style="@style/NormalText"
            />
        <EditText
            android:id="@+id/edit_customer"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:editable="false"
            style="@style/NormalText"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="150dp"
            android:text="Contact Person"
            android:layout_marginTop="8dp"
            style="@style/NormalText"
            />
        <EditText
            android:id="@+id/edit_contact_person"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            style="@style/NormalText"
            android:editable="false"
            android:layout_marginTop="8dp"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="200dp"
            android:text="Requisition No"
            android:layout_marginTop="8dp"
            style="@style/NormalText"
            />
        <EditText
            android:id="@+id/edit_srequisition_no"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            style="@style/NormalText"
            android:editable="false"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/information_center"
        android:layout_width="450dp"
        android:padding="20dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/requisition_location">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="250dp"
            android:text="Make"
            android:editable="false"
            android:layout_marginTop="20dp"
            style="@style/NormalText"
            />
        <EditText
            android:id="@+id/edit_make"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:editable="false"
            style="@style/NormalText"
            android:layout_marginTop="8dp"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="250dp"
            android:text="Serial No"
            style="@style/NormalText"
            android:layout_marginTop="20dp"
            />
        <EditText
            android:id="@+id/edit_serial_no"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:editable="false"
            style="@style/NormalText"
            android:layout_marginTop="8dp"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="100dp"
            style="@style/NormalText"
            android:text="Barcode No"
            android:layout_marginTop="20dp"
            />
        <EditText
            android:id="@+id/edit_barcode_no"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:editable="false"
            style="@style/NormalText"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/information_right"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_toRightOf="@+id/information_center">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="100dp"
            android:text="Model"
            android:layout_marginTop="20dp"
            style="@style/NormalText"
            />
        <EditText
            android:id="@+id/edit_model"
            android:layout_height="wrap_content"
            android:editable="false"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"/>
        <EditText
                android:id="@+id/spin_date"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:editable="false"
                android:layout_marginTop="20dp"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="100dp"
            android:text="Status"
            android:layout_marginTop="20dp"
            style="@style/NormalText"
            />
        <EditText
            android:id="@+id/spin_status"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:editable="false"
            android:layout_marginTop="20dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/job_done_description"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/information_right"
        android:layout_marginLeft="80dp"
        android:layout_alignParentLeft="true"
        android:padding="8dp"
        android:text="Fault finding report:"
        style="@style/HeadingText"/>
    <EditText
        android:id="@+id/edit_job_done_description"
        android:layout_width="800dp"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="80dp"
        android:padding="8dp"
        android:layout_below="@+id/job_done_description"
        android:gravity="top"
        android:editable="false"
        android:background="@drawable/metallic_background"
        android:hint="Work done"/>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="80dp"
        android:padding="8dp"
        android:layout_below="@+id/edit_job_done_description"
        android:orientation="horizontal">
        <include layout="@layout/part_view"/>
    </LinearLayout>
</RelativeLayout>