<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/next_service_date"
        android:layout_height="80dp"
        android:layout_width="200dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        style="@style/HeadingText"
        android:text="Next Service Date:"/>
    <LinearLayout
        android:layout_height="80dp"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/next_service_date"
        android:orientation="horizontal">
        <Spinner
            android:id="@+id/spin_service_day"
            android:layout_height="wrap_content"
            android:layout_width="80dp"
            android:layout_marginTop="20dp"
            android:entries="@array/days"
            />
        <Spinner
            android:id="@+id/spin_service_month"
            android:layout_height="wrap_content"
            android:layout_width="150dp"
            android:layout_marginTop="20dp"
            android:entries="@array/months"
            />
        <Spinner
            android:id="@+id/spin_service_year"
            android:layout_height="wrap_content"
            android:layout_width="80dp"
            android:layout_marginTop="20dp"
            android:entries="@array/years"
            />
    </LinearLayout>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="200dp"
        android:id="@+id/btn_update_service"
        android:text="Update"
        android:layout_below="@+id/next_service_date"
        android:layout_marginLeft="200dp"
        android:background="@drawable/button_state"
        android:padding="8dp"/>
</RelativeLayout>