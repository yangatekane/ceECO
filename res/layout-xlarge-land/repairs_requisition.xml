<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/drawer_background"
        tools:context=".RegistrationActivity"
        android:id="@+id/drawer_layout">
    <ViewFlipper
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/new_viewFlipper">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="450dp"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:id="@+id/requisition_location">
                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="200dp"
                        android:text="Serial No."
                        android:layout_marginTop="20dp"
                        style="@style/NormalText"
                        />
                <EditText
                        android:id="@+id/edit_serial_number"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_marginTop="8dp"/>
                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="200dp"
                        android:text="Requisition Number(RP)"
                        android:layout_marginTop="8dp"
                        style="@style/NormalText"
                        />
                <EditText
                        android:id="@+id/edit_requisition_number"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:inputType="number"
                        android:layout_marginTop="8dp"/>
                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="100dp"
                        android:text="Section"
                        android:layout_marginTop="20dp"
                        style="@style/NormalText"
                        />
                <EditText
                        android:id="@+id/edit_section"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_marginTop="8dp"/>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/information_center"
                    android:layout_width="450dp"
                    android:padding="20dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toRightOf="@+id/requisition_location">
                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="250dp"
                        android:text="Make"
                        android:layout_marginTop="20dp"
                        style="@style/NormalText"
                        />
                <EditText
                        android:id="@+id/edit_make"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_marginTop="8dp"
                        style="@style/NormalText"/>
                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="250dp"
                        android:text="Telephone Number"
                        android:layout_marginTop="20dp"
                        style="@style/NormalText"
                        />
                <EditText
                        android:id="@+id/edit_telephone_number"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_marginTop="8dp"
                        android:inputType="number"
                        style="@style/NormalText"
                        android:text="021 404"/>
                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="100dp"
                        android:text="Department"
                        android:layout_marginTop="20dp"
                        style="@style/NormalText"
                        />
                <EditText
                        android:id="@+id/edit_department"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_marginTop="8dp"/>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/information_right"
                    android:layout_width="450dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:layout_toRightOf="@+id/information_center">
                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="100dp"
                        android:text="Model"
                        android:layout_marginTop="20dp"
                        style="@style/NormalText"
                        />
                <EditText
                        android:id="@+id/edit_model"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_marginTop="8dp"/>
                <LinearLayout
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">
                        <Spinner
                                android:id="@+id/spin_repair_day"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:layout_marginTop="20dp"
                                android:entries="@array/days"
                                />
                        <Spinner
                                android:id="@+id/spin_repair_month"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:layout_marginTop="20dp"
                                android:entries="@array/months"
                                />
                        <Spinner
                                android:id="@+id/spin_repair_year"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:layout_marginTop="20dp"
                                android:entries="@array/years"
                                />
                </LinearLayout>
                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="100dp"
                        android:text="Floor"
                        android:layout_marginTop="20dp"
                        style="@style/NormalText"
                        />
                <EditText
                        android:id="@+id/edit_floor"
                        android:layout_height="wrap_content"
                        android:layout_width="320dp"
                        android:layout_marginTop="8dp"/>
            </LinearLayout>
            <TextView
                    android:id="@+id/requisition_description"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/information_right"
                    android:layout_marginLeft="80dp"
                    android:layout_alignParentLeft="true"
                    android:text="Please carry out the following work:"
                    style="@style/HeadingText"/>
            <EditText
                    android:id="@+id/edit_description"
                    android:layout_width="1100dp"
                    android:layout_height="230dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="80dp"
                    android:padding="8dp"
                    android:layout_below="@+id/requisition_description"
                    android:gravity="top"
                    android:background="@drawable/metallic_background"
                    android:hint="Work to be done"/>
            <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="1100dp"
                    android:orientation="horizontal"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/edit_description"
                    android:layout_marginLeft="80dp">
                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="100dp"
                        android:text="Reported By"
                        android:layout_marginTop="20dp"
                        style="@style/NormalText"
                        />
                <EditText
                        android:id="@+id/edit_reportedBy"
                        android:layout_height="wrap_content"
                        android:layout_width="400dp"
                        android:layout_marginTop="8dp"/>
                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="100dp"
                        android:text="Recieved By"
                        android:layout_marginTop="20dp"
                        style="@style/NormalText"
                        />
                <EditText
                        android:id="@+id/edit_receivedby"
                        android:layout_height="wrap_content"
                        android:layout_width="400dp"
                        android:layout_marginTop="8dp"/>
            </LinearLayout>
            <Button
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/btn_save_repairs"
                    android:text="Save"
                    android:layout_below="@+id/edit_description"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/button_state"
                    android:layout_margin="8dp"
                    android:padding="8dp"/>
        </RelativeLayout>
    </ViewFlipper>
    <ListView
            android:id="@+id/left_drawer"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:choiceMode="singleChoice"
            android:padding="8dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/drawer_background"
            android:dividerHeight="0dp"/>
</android.support.v4.widget.DrawerLayout>