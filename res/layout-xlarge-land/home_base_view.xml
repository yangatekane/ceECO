<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:gravity="center|top"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:id="@+id/linearLayout">

    <LinearLayout
            android:layout_height="350dp"
            android:layout_width="match_parent"
            android:showDividers="middle"
            android:dividerPadding="8dp"
            android:divider="?android:dividerVertical"
            android:background="@drawable/button_blue">

        <ImageView
                android:layout_height="match_parent"
                android:scaleType="center"
                style="?android:borderlessButtonStyle"
                android:layout_width="200dp"
                android:padding="10dp"
                android:contentDescription="@string/category_icon"
                android:layout_weight="2"/>

        <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:paddingLeft="14dp"
                android:layout_weight="8">

            <TextView
                    style="@style/TextAppearanceMedium"
                    android:textSize="18sp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textColor="@color/profile_text_color"
                    android:text="@string/profile_categories"/>

            <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="center_horizontal">

                <TextView
                        style="@style/TextAppearanceSmall"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textColor="@color/profile_text_color_light"
                        android:text="@string/profile_categories_description"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <LinearLayout
                android:layout_height="70dp"
                android:layout_width="550dp"
                android:id="@+id/profile_categories"
                android:showDividers="middle"
                android:dividerPadding="8dp"
                android:divider="?android:dividerHorizontal"
                android:background="@drawable/button_blue">

            <ImageView
                    android:id="@+id/new_quipments"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    style="?android:borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_safety_wht"
                    android:contentDescription="@string/category_icon"
                    android:layout_weight="2"/>

            <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:paddingLeft="14dp"
                    android:layout_weight="8">

                <TextView
                        style="?android:listSeparatorTextViewStyle"
                        android:textSize="18sp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textColor="@color/profile_text_color"
                        android:text="@string/profile_categories"/>

                <TextView
                        style="@style/TextAppearanceSmall"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textColor="@color/profile_text_color_light"
                        android:text="@string/profile_categories_description"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:layout_height="70dp"
                android:layout_width="550dp"
                android:id="@+id/profile_retailers"
                android:showDividers="middle"
                android:dividerPadding="8dp"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:divider="?android:dividerHorizontal"
                android:background="@drawable/button_blue">

            <ImageView
                    android:id="@+id/repairs_requisition"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    style="?android:borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:padding="10dp"
                    android:src="@drawable/ic_hazard_wht"
                    android:contentDescription="@string/retailer_icon"/>

            <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:paddingLeft="14dp"
                    android:layout_weight="8">

                <TextView
                        style="?android:listSeparatorTextViewStyle"
                        android:textSize="18sp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textColor="@color/profile_text_color"
                        android:text="@string/profile_retailers"/>

                <TextView
                        style="@style/TextAppearanceSmall"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textColor="@color/profile_text_color_light"
                        android:text="@string/profile_retailers_description"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">
        <LinearLayout
                android:layout_height="70dp"
                android:layout_width="550dp"
                android:showDividers="middle"
                android:dividerPadding="8dp"
                android:divider="?android:dividerHorizontal"
                android:id="@+id/profile_notifications"
                android:background="@drawable/button_blue">

            <ImageView
                    android:id="@+id/existing_quipments"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    style="?android:borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:padding="10dp"
                    android:src="@drawable/ic_notifications_wht"
                    android:contentDescription="@string/notification_icon"/>

            <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:paddingLeft="14dp"
                    android:layout_weight="8">

                <TextView
                        style="?android:listSeparatorTextViewStyle"
                        android:textSize="18sp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textColor="@color/profile_text_color"
                        android:text="@string/notification_label"/>

                <TextView
                        style="@style/TextAppearanceSmall"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textColor="@color/profile_text_color_light"
                        android:text="@string/notification_label_description"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:layout_height="70dp"
                android:layout_width="550dp"
                android:id="@+id/profile_user"
                android:showDividers="middle"
                android:dividerPadding="8dp"
                android:divider="?android:dividerHorizontal"
                android:background="@drawable/button_blue">

            <ImageView
                    android:id="@+id/job_cards"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    style="?android:borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:padding="10dp"
                    android:src="@drawable/ic_friend_wht"
                    android:contentDescription="@string/user_icon"/>

            <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:paddingLeft="14dp"
                    android:layout_weight="8">

                <TextView
                        style="?android:listSeparatorTextViewStyle"
                        android:textSize="18sp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textColor="@color/profile_text_color"
                        android:text="@string/user_label"/>

                <TextView
                        style="@style/TextAppearanceSmall"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textColor="@color/profile_text_color_light"
                        android:text="@string/user_label_description"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>