<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_notification_icon"
    android:layout_height="48dp"
    android:layout_width="48dp"
    android:padding="8dp">

    <ImageButton
        android:id="@+id/home_action_bar_notification_icon"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@drawable/action_bar_notification" />

    <TextView
        android:id="@+id/home_action_bar_notification_number"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:textStyle="bold"
        android:clickable="false"
        android:layout_gravity="top|right"
        android:gravity="center"
        android:background="@drawable/icon_rect_background"
        android:textColor="@color/white"
        android:visibility="visible" />

</FrameLayout>