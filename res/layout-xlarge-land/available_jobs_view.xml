<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/pink_job_border"
    android:padding="8dp">
    <TextView
        android:id="@+id/repair_model_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="Model: "
        style="@style/NormalText"
        android:paddingLeft="8dp"/>
    <TextView
        android:id="@+id/repair_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/repair_model_title"
        style="@style/NormalText"
        android:paddingLeft="8dp"/>
    <TextView
        android:id="@+id/repair_reporter_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/repair_model_title"
        android:layout_alignParentLeft="true"
        android:text="Reporter: "
        style="@style/NormalText"
        android:paddingLeft="8dp"/>
    <TextView
        android:id="@+id/repair_reporter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/repair_reporter_title"
        android:layout_below="@+id/repair_model"
        style="@style/NormalText"
        android:paddingLeft="8dp"/>
    <TextView
        android:id="@+id/repair_description"
        android:layout_width="416dp"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/repair_reporter_title"
        style="@style/NormalText"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"/>
    <include layout="@layout/archive_view"/>
</RelativeLayout>