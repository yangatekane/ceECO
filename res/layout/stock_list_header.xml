<?xml version="1.0" encoding="utf-8"?>

<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:padding="8dp">
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_part_number_stock"
            android:layout_height="wrap_content"
            android:layout_width="240dp"
            style="@style/HeadingText"
            android:text="Part Number"
            android:padding="8dp"/>
        <TextView
            android:id="@+id/txt_description_stock"
            android:layout_height="wrap_content"
            style="@style/HeadingText"
            android:layout_width="240dp"
            android:text="Supplier-Description"
            android:padding="8dp"/>
        <TextView
            android:id="@+id/txt_quantity_stock"
            style="@style/HeadingText"
            android:layout_height="wrap_content"
            android:layout_width="240dp"
            android:text="Quantity"
            android:padding="8dp"/>
        <TextView
            android:id="@+id/txt_amount_stock"
            style="@style/HeadingText"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Amount"
            android:padding="8dp"/>
    </TableRow>

</TableLayout>