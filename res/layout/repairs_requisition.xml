<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/drawer_background"
        tools:context=".RegistrationActivity"
        android:id="@+id/drawer_layout">
    <ViewFlipper
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/new_viewFlipper">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:id="@+id/basic_info">
                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="200dp"
                        android:text="Requisition Number(RP)"
                        android:layout_marginTop="8dp"
                        style="@style/NormalText"
                        />
                <EditText
                        android:id="@+id/edit_requisition_number"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_marginTop="8dp">
                </EditText>
                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="100dp"
                        android:text="Section"
                        android:layout_marginTop="20dp"
                        style="@style/NormalText"
                        />
                <EditText
                        android:id="@+id/edit_section"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_marginTop="8dp"/>
                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="250dp"
                        android:text="Telephone Number"
                        android:layout_marginTop="20dp"
                        style="@style/NormalText"
                        />
                <EditText
                        android:id="@+id/edit_telephone_number"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_marginTop="8dp"
                        style="@style/NormalText"
                        android:text="021 404"/>
                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="100dp"
                        android:text="Date"
                        android:layout_marginTop="20dp"
                        style="@style/NormalText"
                        />
                <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="horizontal">
                    <EditText
                            android:id="@+id/edit_date"
                            android:layout_height="wrap_content"
                            android:layout_width="240dp"
                            android:inputType="datetime"
                            android:layout_marginTop="8dp"/>
                    <Button
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:id="@+id/btn_date"
                            android:text="chose"
                            android:layout_below="@+id/chose_date"
                            android:background="@drawable/button_state"
                            android:layout_margin="8dp"
                            android:padding="8dp"/>

                </LinearLayout>
                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="100dp"
                        android:text="Department"
                        android:layout_marginTop="20dp"
                        style="@style/NormalText"
                        />
                <EditText
                        android:id="@+id/edit_department"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_marginTop="8dp"/>
            </LinearLayout>
            <Button
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/btn_save_new_equipment"
                    android:text="Save"
                    android:layout_below="@+id/basic_info"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/button_state"
                    android:layout_margin="8dp"
                    android:padding="8dp"/>
        </RelativeLayout>
    </ViewFlipper>
    <ListView
            android:id="@+id/left_drawer"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:choiceMode="singleChoice"
            android:padding="8dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/drawer_background"
            android:dividerHeight="0dp"/>
</android.support.v4.widget.DrawerLayout>